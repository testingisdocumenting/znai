<assembly>
    <id>znai</id>
    <formats>
        <format>zip</format>
    </formats>

    <dependencySets>
        <dependencySet>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <outputDirectory>lib</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <includes>
                <include>org.testingisdocumenting.znai:znai-shaded:*</include>
                <include>org.codehaus.groovy:*</include>
            </includes>
            <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>

        <dependencySet>
            <unpack>true</unpack>
            <outputDirectory>doc-export</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <includes>
                <include>org.testingisdocumenting.znai:znai-docs:*</include>
            </includes>
            <outputFileNameMapping>docs-export</outputFileNameMapping>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <directory>${project.basedir}/bin</directory>
            <outputDirectory/>
            <includes>
                <include>*</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
</assembly>